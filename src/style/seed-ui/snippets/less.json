{
    /*
	// Place your snippets for Less here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
    "typography ": {
        "prefix": ".typ",
        "body": [
            "font-size: $1px;",
            "line-height: $2px;"
        ],
        "description": "`font-size` always comes with `line-height`"
    },
    "center single line text": {
        "prefix": ".lh-h",
        "body": [
            "line-height: $1px;",
            "height: $1px;"
        ],
        "description": "Same `line-height` and `height` makes single line text center"
    },
    "background color": {
        "prefix": ".bg",
        "body": [
            "background-color: $1;"
        ],
        "description": "Background color"
    },
    "background image": {
        "prefix": ".bg-img",
        "body": [
            "background-image: url($1);",
            "background-repeat: no-repeat;",
            "background-position: center center;"
        ],
        "description": "Background image"
    },
    "border": {
        "prefix": ".bd",
        "body": [
            "border: 1px solid $1;"
        ],
        "description": "Border"
    },
    "border bottom": {
        "prefix": ".bd-bottom",
        "body": [
            "border-bottom: 1px solid $1;"
        ],
        "description": "Border bottom"
    },
    "border top": {
        "prefix": ".bd-top",
        "body": [
            "border-top: 1px solid $1;"
        ],
        "description": "Border top"
    },
    "border-radius": {
        "prefix": ".br",
        "body": [
            "border-radius: $1px;"
        ],
        "description": "Border radius"
    },
    "size": {
        "prefix": ".sz",
        "body": [
            "height: $1px;",
            "width: $2px;"
        ],
        "description": "Size"
    },
    "borer box": {
        "prefix": ".bd-box",
        "body": [
            "box-sizing: border-box;"
        ],
        "description": "Border box"
    },
    "block": {
        "prefix": ".block",
        "body": [
            "display: block;"
        ],
        "description": "Display block"
    },
    "inline block": {
        "prefix": ".inline-block",
        "body": [
            "display: inline-block;"
        ],
        "description": "Display inline block"
    },
    "relative": {
        "prefix": ".relative",
        "body": [
            "position: relative;"
        ],
        "description": "Position relative"
    },
    "absolute": {
        "prefix": ".absolute",
        "body": [
            "position: absolute;"
        ],
        "description": "Position absolute"
    },
    "absolute cover": {
        "prefix": ".abs-cover",
        "body": [
            "position: absolute;",
            "top: ${1:0};",
            "right: ${1:0};",
            "bottom: ${1:0};",
            "left: ${1:0};"
        ],
        "description": "Position absolute cover"
    },
    "block center": {
        "prefix": ".block-center",
        "body": [
            "display: block;",
            "width: $1px;",
            "margin-left: auto;",
            "margin-right: auto;"
        ]
    },
    "flex center": {
        "prefix": ".flex-center",
        "body": [
            "display: flex;",
            "align-items: center;",
            "justify-content: center;"
        ],
        "description": "Display flex center"
    },
    "flex row": {
        "prefix": ".flex-row",
        "body": [
            "display: flex;",
            "align-items: center;",
            ".col-flex {",
            "\tflex: 1",
            "}",
            ".col {",
            "\tdisplay: block;",
            "}"
        ],
        "description": "Flex row"
    },
    "flex col": {
        "prefix": ".flex-col",
        "body": [
            "display: flex;",
            "flex-direction: column;",
            ".row-flex {",
            "\tflex: 1",
            "}",
            ".row {",
            "\tdisplay: block;",
            "}"
        ],
        "description": "Flex col"
    },
    "text center": {
        "prefix": ".text-center",
        "body": [
            "text-align: center;"
        ],
        "description": "Text center"
    },
    "pointer": {
        "prefix": ".pointer",
        "body": [
            "cursor: pointer;"
        ],
        "description": "Cursor pointer"
    }
}